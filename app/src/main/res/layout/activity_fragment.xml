<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/id"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:text="Id : "
        android:layout_marginRight="6dp"
        android:padding="3dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:maxLines="2"
        android:text="Input : "
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tanggalinput"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/label1"
        android:maxLines="1"
        android:text=" "
        android:padding="3dp"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/label2"
        android:layout_toRightOf="@id/id"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/label1"
        android:maxLines="2"
        android:text="Ubah :"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tanggalubah"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tanggalinput"
        android:layout_toRightOf="@id/label2"
        android:maxLines="1"
        android:text=""
        android:padding="3dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/label3"
        android:layout_toRightOf="@id/id"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:layout_below="@id/label2"
        android:text="Tinggi : "
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tinggi"
        android:textColor="#000000"
        android:text=""
        android:textSize="17sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanggalubah"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/label3"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:layout_below="@id/label3"
        android:maxLines="1"
        android:text="Berat : "
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/berat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:layout_below="@id/tinggi"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/label4"
        android:ellipsize="end"
        android:textColor="#000000"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/label5"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:layout_below="@id/label4"
        android:maxLines="1"
        android:text="Keterangan : "
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/keterangan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/berat"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/label5"
        android:ellipsize="end"
        android:text=""
        android:textSize="17sp"
        android:textColor="#000000"
        android:maxLines="5"
        android:padding="3dp"
        android:visibility="visible" />
</RelativeLayout>